<h1>Add Ingredients</h1>

<form action="/recipe/new/<%= @recipe.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="description">Ingredient:</label>
    <input name="description" type="text">
    <label for="amount">Amount:</label>
    <input name="amount" type="text">
  </div>
  <button type="submit" class="btn btn-success">Add Ingredient</button>
</form>

<form action="/recipe/<%= @recipe.id %>/instructions" method="get">
  <button type="submit" class="btn btn-info">Move On To Instructions</button>
</form>
