<h2><%= @category.name %> recipes</h2>

<ul style="list-style:none;">
  <% @recipes.each do |r| %>
    <li style="font-size:20px;">Title: <%= r.title %></li>
    <BLOCKQUOTE><li>    Ingredients: <%= r.ingredients %></li>
    <li>    Instructions: <%= r.instructions %></li></BLOCKQUOTE>
  <% end %>
</ul>

<br><br>

<form action="/categories" method="post">
  <input name="_method" type="hidden" value="delete">
  <input name="id" type="hidden" value="<%=@category.id%>">
  <button type="submit" class="btn btn-danger">Delete <%=@category.name %> Category</button>
</form>
